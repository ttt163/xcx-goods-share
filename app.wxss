/**app.wxss**/
page {
  height: 100%;
  overflow: hidden;
  background: rgba(0, 0, 0, 1);
}

.container {
  width: 100%;
  height: 100%;
  overflow: hidden;
} 

.img-bg {
  width: 100%;
  height: 100%;
}

/* 半透明背景  */
.mask {
background: rgba(0, 0, 0, 0.4);
z-index: 99;
width: 100%;
color: #fffffe;
}

/* 下一步按钮  */
.btn-next {
  position: absolute;
  bottom: 0rpx;
  right: 0;
  width: 163rpx;
  height: 73rpx;
}

.btn-next .next-bg {
  width: 163rpx;
  height: 73rpx;
  position: absolute;
  top: 0;
}

.btn-next text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 2;
  color: #fffffe;
  font-size: 34rpx;
  text-shadow:-1rpx 0 #b7b1b1, 0 1rpx #b7b1b1, 1rpx 0 #b7b1b1, 0 -1rpx #b7b1b1;
  white-space:nowrap;

}

/* 上传  */

.upload {
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 25rpx;
  border: 8rpx dashed #fffffe;
  background: rgba(0, 0, 0, 0.5);
}

.upload .add-img {
  width: 85rpx;
  height: 85rpx;
  display:block;
  margin:0 auto 20rpx;

}
.upload-mask {
  top: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 1;
  background: rgba(0, 0, 0, 0.2);
}

.upload text {
  white-space: nowrap;
display: block;
}


.upload .upload-cont {
  position: absolute;
  z-index: 2;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #ffffff;
  font-size: 32rpx;
}

/* 红色按钮 */
.red-btn-bg {
  background-color: #ff3e32;
  color: #ffffff;
}

.add-icon {
  width: 40rpx;
  height: 40rpx;
}

.refresh-icon {
  width: 26rpx;
  height: 26rpx;
}