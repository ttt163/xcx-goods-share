.upload {
  width: 390rpx;
  height: 260rpx;
  overflow: hidden;
  top: 144rpx;
  font-size: 34rpx;
}

.upload-bg {
   width:100%;
height:100%; 
}

.upload text {
  margin-top: 20rpx;
}

/* 标签  */

.labels {
  background-color: rgba(0, 0, 0, 0.5);
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 0 40rpx 30rpx;
  font-size: 28rpx;
  color: #e8e9e7;
  position: absolute;
  bottom: 160rpx;
  height: 490rpx;
}

.label-top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 18rpx;
}

.label-top > view {
  margin-right: 64rpx;
  display: flex;
  align-items: center;
}

.refresh-icon {
  margin-right: 10rpx;
}

.labels-rows {
  display: flex;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.label-item {
  /* width: 144rpx;  */
  min-width: 120rpx;
  margin-bottom: 20rpx;
  height: 58rpx;
  padding: 0 14rpx;
  box-sizing: border-box;
  line-height: 58rpx;
  text-align: center;
  background: transparent;
  margin-right: 22rpx;
  border: 1rpx solid #e8e9e7;
  border-radius: 35rpx;
  white-space: nowrap;
  overflow: hidden;
}

.label-item.active-bg1 {
  background-color: #ff3e32;
  border: 0;
}

.label-item.active-bg2 {
  background-color: #ff9500;
  border: 0;
}

.label-item.active-bg3 {
  background-color: #ff2d55;
  border: 0;
}

.label-item.active-bg4 {
  background: #ff6d2d;
  border: 0;
}

.labels-rows .label-item:nth-last-of-type(1) {
  margin-right: 0;
}

.labels-title {
  margin-bottom: 18rpx;
  display: block;
}

/* 开始评定  */

.kspd-next {
  position: absolute;
  color: rgb(255, 255, 255);
  bottom: 20rpx;
  right: 20rpx;
  font-size: 34rpx;
}

.kspd-next text {
  margin-left: 5rpx;
}

.kspd-next text:nth-of-type(1) {
  /* opacity: 0.4; */
   /* animation: opt1 1.5s linear infinite alternate; */
  animation: opt1 1s linear infinite;
}

.kspd-next text:nth-of-type(2) {
  /* opacity: 1; */
  animation: opt2 1s linear infinite;
}

.kspd-next text:nth-of-type(3) {
  /* opacity: 0.8; */
  animation: opt3 1s linear infinite;
}

.kspd-next text:nth-of-type(4) {
  /* opacity: 0.6; */
  animation: opt4 1s linear infinite;
}

