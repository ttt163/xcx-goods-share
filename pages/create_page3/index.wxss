.list-item {
  height: 98rpx;
  line-height: 98rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.list-item.active {
  color: #ff3e32;
}

.add-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 98rpx;
  line-height: 98rpx;
}

.add-box input {
  width: 256rpx;
  padding-right: 25rpx;
}

.add-box button {
  width: 66rpx;
  height: 45rpx;
  line-height: 45rpx;
  font-size: 24rpx;
  padding: 0;
  margin: 0;
  text-align: center;
  border-radius: 10rpx;
}

.pla-css {
  font-size: 28rpx;
  color: #999;
}

.add-icon {
  margin-right: 12rpx;
}
