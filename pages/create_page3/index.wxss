.cd-modal {
  position: absolute;
  background: #fff;
  border-radius: 25rpx;
  color: #333;
  width: 532rpx;
  left: 50%;
  top: 50%;
  font-size: 32rpx;
  transform: translate3d(-50%, -50%, 0);
  overflow: hidden;
}

.cd-contain {
  display: flex;
}

.cd-title {
  height: 86rpx;
  line-height: 86rpx;
  text-align: center;
  display: block;
  border-bottom: 2rpx solid #f5f5f5;
}

.cd-nav {
  font-size: 27.99rpx;
  color: #666;
  width: 150rpx;
  background-color: #f8f8f8;
}

.nav-item {
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
}

.nav-item.active {
  color: #333;
  background-color: #fff;
}

.cd-right {
  margin: 0 22rpx 0 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.nav-content {
  font-size: 32rpx;
  color: #333;
  height: 490rpx;
   overflow: auto; 
}

.nav-content::-webkit-scrollbar {
  width: 3px;
  height: 3px;
}

